@model MartUretimTakipMVC.Models.Database.GecmisHareket
@{
    ViewBag.Title = "EtiketsizSayimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Etiketsiz Sayım Geri Al</h2>
<br />
<h3 style="color:red;">@ViewBag.Msg</h3>
@using (Html.BeginForm("EtiketsizSayimGeriAl", "GecmisHareket", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.HareketID)
        @Html.LabelFor(x => x.EklenmeTarihi)
        @Html.TextBoxFor(x => x.EklenmeTarihi, new { style = "width:300px; text-align:center; font-size:19px;  ", required = "required", disabled = "disabled", @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.DuzenlenmeTarihi)
        @Html.TextBoxFor(x => x.DuzenlenmeTarihi, new { style = "width:300px; text-align:center; font-size:19px;  ", required = "required", disabled = "disabled", @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.StokKodu)
        @Html.TextBoxFor(x => x.StokKodu, new { style = "width:300px; text-align:center; font-size:19px;  ", onkeypress = "javascript:return isChar(event)", autocomplete = "off", required = "required", @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.OncekiAdet)
        @Html.TextBoxFor(x => x.OncekiAdet, new { style = "width:300px; text-align:center; font-size:19px;  ", autocomplete = "off", disabled = "disabled", @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.SonrakiAdet)
        @Html.TextBoxFor(x => x.SonrakiAdet, new { style = "width:300px; text-align:center; font-size:19px;  ", onkeypress = "javascript:return isChar(event)", autocomplete = "off", @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Duzenlenecek)
        @Html.TextBoxFor(x => x.Duzenlenecek, new { style = "width:300px; text-align:center; font-size:19px;  ", required = "required", disabled = "disabled", autocomplete = "off", @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Duzenlendi)
        @Html.TextBoxFor(x => x.Duzenlendi, new { style = "width:300px; text-align:center; font-size:19px;  ", required = "required", autocomplete = "off", disabled = "disabled", @class = "form-control" })
        <br />       
        @Html.LabelFor(x => x.Kullanici)
        @Html.TextBoxFor(x => x.Kullanici, new { style = "width:300px; text-align:center; font-size:19px;  ", disabled = "disabled", @class = "form-control" })
        <br />
        <button class="btn btn-primary">Kaydet</button>
    </div>
}
